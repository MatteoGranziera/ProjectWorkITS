
@{
    ViewBag.Title = "ViewC";
}

<h2>What is the language used more?</h2>
<div id="pnl"></div>
@section scripts{
<script type="text/javascript">
    
    $.ajax({
        url: '/api/Finalscore?country=@ViewBag.Country',
        type: 'GET',
        dataType: 'json'
    }).done(function (data) {
        var html = '';
        for (var i = 0; i < data.length; i++) {
            var resultcountry = data[i];

            html = html + '<h3>' + resultcountry.namelanguage + " " + resultcountry.score + '</h3><br/>';

        }

        html = html + '<h4><a href="/Home/Index">Return Home</a><br/></h4>';

        $('#pnl').html(html);
    }).error(function (e) {
        alert("errore")
    })
</script>
}




